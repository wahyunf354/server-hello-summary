<%- include('../../layout/header.ejs') %>
  <%- include('../../layout/navbar.ejs') %>
    <%- include('../../layout/sidebar.ejs') %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <%- include('../../layout/message.ejs') %>
                <div class="col-sm-6">
                  <h1 class="m-0">Patner</h1>
                </div>
            </div><!-- /.row -->
          </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    <a href="/admin/patner/add" class="btn btn-primary btn-sm">
                      Tambah Patner
                    </a>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body">
                    <table id="table_patner" class="table table-bordered table-striped">
                      <thead>
                        <tr>
                          <th>No</th>
                          <th>Nama Pemilik Usaha</th>
                          <th>Email</th>
                          <th>No Hp / WA</th>
                          <th>Lokasi Store</th>
                          <th>Jumlah Product</th>
                          <th>Tanggal Gabung</th>
                          <th>Nama Brand</th>
                          <th>Aksi</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% patners.forEach((data, i)=> { %>
                          <tr>
                            <td>
                              <%= i+1 %>
                            </td>
                            <td>
                              <%= data.nameOwner %>
                            </td>
                            <td>
                              <%= data.email %>
                            </td>
                            <td>
                              <%= data.noHp %>
                            </td>
                            <td>
                              <%= data.locationStore %>
                            </td>
                            <td>
                              <%= data.productId.length %>
                            </td>
                            <td>
                              <%= new Intl.DateTimeFormat('en-GB', { year: 'numeric' , month: 'long' , day: '2-digit'
                                }).format(data.dateJoin) %>
                            </td>
                            <td>
                              <%= data.nameBrand %>
                            </td>
                            <td>
                              <form action="/admin/patner/<%= data._id %>?_method=DELETE" method="post">
                                <a href="/admin/patner/<%= data._id %> " class="btn btn-sm text-primary"><i
                                    class="fa fa-info-circle"></i></a>
                                <a href="/admin/patner/edit/<%= data._id %>" class="btn btn-sm text-primary"><i
                                    class="fa fa-edit"></i></a>
                                <button type="submit" class="btn btn-sm text-primary"><i class="fa fa-trash"></i></>
                              </form>
                            </td>
                          </tr>
                          <% }) %>
                      </tbody>
                    </table>
                  </div>
                  <!-- /.card-body -->
                </div>
                <!-- /.card -->
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- Main row -->
            <div class="row">

            </div>
            <!-- /.row (main row) -->
          </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
      </div>
      <%- include('../../layout/footer.ejs') %>

        <script>
          $(function () {
            $("#table_patner").DataTable({
              "responsive": true,
              "columnDefs": [{
                "targets": [0],
                "orderable": false
              }]
            })
          });
        </script>