<%- include('../../layout/header.ejs') %>
  <%- include('../../layout/navbar.ejs') %>
    <%- include('../../layout/sidebar.ejs') %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <%- include('../../layout/message.ejs') %>
                <div class="col-sm-6">
                  <h1 class="m-0">Paket Franchise</h1>
                </div>
            </div><!-- /.row -->
          </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="row">
              <div class="col-12">

                <div class="card">
                  <div class="card-header">
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalAddTypeBundle">
                      Tambah Paket Franchise
                    </button>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body">
                    <table id="table_patner" class="table table-bordered table-striped">
                      <thead>
                        <tr>
                          <th>No</th>
                          <th>Judul</th>
                          <th>Keterangan</th>
                          <th>Harga</th>
                          <th>Aksi</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% typeBundles.forEach((typeBundle, i)=> { %>
                          <tr>
                            <td>
                              <%= i+1 %>
                            </td>
                            <td>
                              <%= typeBundle.title %>
                            </td>
                            <td>
                              <%= typeBundle.price %>
                            </td>
                            <td>
                              <%= typeBundle.description %>
                            </td>
                            <td>
                              <a href="#" class="btn btn-sm text-primary"><i class="fa fa-info-circle"></i></a>
                              <a type="button" class="btn btn-sm text-primary"><i class="fa fa-edit"></i></a>
                              <a href="#" class="btn btn-sm text-primary"><i class="fa fa-trash"></i></a>
                            </td>
                          </tr>
                          <% }) %>
                      </tbody>
                    </table>
                  </div>
                  <!-- /.card-body -->
                </div>
                <!-- /.card -->
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- Main row -->
            <div class="row">

            </div>
            <!-- /.row (main row) -->
          </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
      </div>
      <%- include('../../layout/footer.ejs') %>
        <%- include('./add.ejs') %>

          <script>
            $(function () {
              $("#table_patner").DataTable({
                "columnDefs": [
                  {
                    "targets": 0,
                    "width": "5%"
                  },
                  {
                    "targets": 3,
                    "width": "50%"
                  },

                  {
                    "targets": 4,
                    "orderable": false
                  }
                ]
              })
            });
          </script>